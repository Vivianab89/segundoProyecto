<body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.0/js/bootstrap.min.js"></script>
    
    <div>
        <header class="d-flex justify-content-center py-3">
            <div class="logo">
                <center>
                    <image src="/images/logo-no-background.png" alt="Logo Clinica" width="200px">
                    </image>
                </center>
                <h1 class="nombre-clinica"> Clínica San José Moscati</h1>
            </div>
        </header>
    </div>
    <main>
        <h2>Formulario de agendamiento de citas</h2>
        <br>
        <div class="container-form">
            <form class="form-agenda" method="post" action="/agregar-cita">
                
                <div class="col-6">
                    <label for="cedula" class="form-label">Número de cédula:</label>
                    <input type="number" name="cedula" class="form-control" id="cedula" placeholder="Número de cédula" required>
                </div>

                <div class="col-6">
                    <label for="fecha_cita" class="form-label">Fecha de cita médica:</label>
                    <input type="date" class="form-control" id="fecha_cita" name="fecha_cita" placeholder="Fecha de cita médica" required>
                </div>

                <div class="col-6">
                    <label for="medico" class="form-label">Especialista:</label>
                    <select class="form-select" name="medico" id="medico" aria-label="medico"  required>
                        <option value="OP">*** Seleccione una opción ***</option>
                        {{#each resultado}}
                            <option value="{{cedula}}">{{nombres}} {{apellidos}}</option>
                        {{/each}}
                    </select>
                </div>
                <center><button type="submit" id="enviar" class="btn btn-outline-light">Registrar</button></center>
            </form>
        </div>
    </main>
    
